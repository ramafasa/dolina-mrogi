---
const products = [
  {
    name: 'Jaja z wolnego wybiegu',
    desc: 'Świeże jaja od szczęśliwych kur z wolnego wybiegu — codziennie zbierane ręcznie.',
    gradient: 'from-amber-100 to-amber-50',
    image: '/images/jaja.jpg',
  },
  {
    name: 'Mięso wieprzowe, wołowe i drobiowe',
    desc: 'Mięso z lokalnych gospodarstw — bez antybiotyków i hormonów.',
    gradient: 'from-rose-100 to-rose-50',
    image: '/images/mieso.jpg',
  },
  {
    name: 'Dziczyzna',
    desc: 'Sarnina, dzik i jeleń — dla koneserów naturalnego smaku.',
    gradient: 'from-emerald-100 to-emerald-50',
    image: '/images/dziczyzna.jpg',
  },
  {
    name: 'Miód z lokalnych pasiek',
    desc: 'Miód wielokwiatowy i lipowy — prosto z uli naszych pszczelarzy.',
    gradient: 'from-yellow-100 to-yellow-50',
    image: '/images/miod.jpg',
  },
];
---

<section class="py-16 sm:py-24">
  <div class="mx-auto max-w-6xl px-4">
    <h2 class="text-center font-serif text-3xl font-bold text-forest sm:text-4xl">
      Co znajdziesz w naszej ofercie?
    </h2>
    <p class="mx-auto mt-4 max-w-xl text-center text-warm-brown/70">
      Starannie wyselekcjonowane produkty od sprawdzonych rolników z okolic Doliny Mrogi.
    </p>
    <div class="mt-12 grid gap-6 sm:grid-cols-2">
      {products.map((p) => (
        <div class="group overflow-hidden rounded-2xl bg-white shadow-sm transition hover:shadow-md">
          <div class="aspect-[16/9] overflow-hidden">
            <img
              src={p.image}
              alt={p.name}
              class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </div>
          <div class={`bg-gradient-to-br ${p.gradient} p-6`}>
            <h3 class="font-serif text-xl font-bold text-warm-brown">{p.name}</h3>
            <p class="mt-2 text-sm leading-relaxed text-warm-brown/70">{p.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
