---
import '@fontsource/cormorant/400.css';
import '@fontsource/cormorant/600.css';
import '@fontsource/cormorant/700.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Smaki Doliny Mrogi — Świeże produkty od lokalnych rolników',
  description = 'Zapisz się na listę i odbierz -25% na pierwsze zamówienie. Jaja, mięso, dziczyzna i miód prosto od rolników z Doliny Mrogi. Dowóz pod drzwi w okolicach Łodzi.',
} = Astro.props;

const ogImage = new URL('/images/pole.jpg', Astro.url);
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pl_PL" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <title>{title}</title>
  </head>
  <body class="bg-cream font-sans text-warm-brown antialiased">
    <slot />
  </body>
</html>
